{
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "rewrites": [
        {
            "source": "/api/health",
            "destination": "https://stockncrypto.onrender.com/api/health"
        },
        {
            "source": "/api/:path*",
            "destination": "https://stockncrypto.onrender.com/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}